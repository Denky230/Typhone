<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stucom.grupo4.typhone">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id"/>
        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

        <activity
            android:name=".activities.HomeActivity"
            android:theme="@style/AppTheme.FullscreenPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.PlayActivity"
            android:inputType="textNoSuggestions|textFilter|textVisiblePassword"
            android:windowSoftInputMode="stateAlwaysVisible|adjustNothing"
            android:theme="@style/AppTheme.FullscreenPortrait" />
        <activity
            android:name=".activities.ScoreboardActivity"
            android:theme="@style/AppTheme.FullscreenPortrait" />
        <activity
            android:name=".activities.SettingsActivity"
            android:theme="@style/AppTheme.FullscreenPortrait" />
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/AppTheme.FullscreenPortrait" />
        <activity
            android:name=".activities.RegisterActivity"
            android:theme="@style/AppTheme.FullscreenPortrait" />
        <activity
            android:name=".activities.StatsTestActivity"
            android:theme="@style/AppTheme.FullscreenPortrait" />
        <activity
            android:name=".activities.FinalActivity"
            android:theme="@style/AppTheme.FullscreenPortrait" />
    </application>

</manifest>